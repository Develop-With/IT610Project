@using IT610Project.Models.NEF
@model IEnumerable<NewEquipment>
@{
    ViewData["Title"] = "List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">New Equipment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="NewEquipment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle">
                    <img src="/icons/bootstrap-icons-1.8.2/plus-circle.svg" />
                </i> &nbsp; Add new equipment
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Control Number
            </th>
            <th>
                Serial Number
            </th>
            <th width="25%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.ControlNo
                </td>
                <td>
                    @obj.Serial
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="NewEquipment" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square">
                                <img src="/icons/bootstrap-icons-1.8.2/pencil-square.svg"/>
                            </i>Edit
                        </a>
                        <a asp-controller="NewEquipment" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill">
                                <img src="/icons/bootstrap-icons-1.8.2/trash-fill.svg"/>
                            </i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>